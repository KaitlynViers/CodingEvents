@model AddEventViewModel;
@using CodingEvents.ViewModels;

<h1>Add Event</h1>

<form method="post">
    <div asp-controller="Events" asp-action="Add" class="fore-group">
    <label asp-for="Name"></label>
    <input asp-for="Name"/>
    <span asp-validation-for="Name"></span>
    </div>
    <div class="fore-group">
    <label asp-for="Description"></label>
    <input asp-for="Description" />
   <span asp-validation-for="Description"></span>
    </div>
    <div class="form=group">
        <label asp-for="ContactEmail">E-Mail</label>
        <input asp-for="ContactEmail"/>
        <span asp-validation-for="ContactEmail"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type">Event Type</label>
        <select asp-for="Type" asp-items="Model.EventTypes"></select>
    </div>
    <input type="submit" value="Add Event" />
</form>